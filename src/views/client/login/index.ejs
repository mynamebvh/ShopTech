<!DOCTYPE html>
<html lang="en">
  <%- include ("../components/head")%>

  <body>
    <%- include ("../components/header")%>

    <div class="sticky-header-next-sec ec-breadcrumb section-space-mb">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="row ec_breadcrumb_inner">
              <div class="col-md-6 col-sm-12">
                <h2 class="ec-breadcrumb-title">Login</h2>
              </div>
              <div class="col-md-6 col-sm-12">
                <!-- ec-breadcrumb-list start -->
                <ul class="ec-breadcrumb-list">
                  <li class="ec-breadcrumb-item"><a href="index.html">Home</a></li>
                  <li class="ec-breadcrumb-item active">Login</li>
                </ul>
                <!-- ec-breadcrumb-list end -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <section class="ec-page-content section-space-p">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <div class="section-title">
              <h2 class="ec-bg-title">Log In</h2>
              <h2 class="ec-title">Log In</h2>
              <p class="sub-title mb-3">Best place to buy and sell digital products</p>
            </div>
          </div>
          <div class="ec-login-wrapper">
            <div class="ec-login-container">
              <div class="ec-login-form">
                <form action="#" method="post" class="form-login">
                  <span class="ec-login-wrap">
                    <label>Email*</label>
                    <input id="email" type="text" name="name" placeholder="Enter your email add..." required="" value=""/>
                  </span>
                  <span class="ec-login-wrap">
                    <label>Mật khẩu*</label>
                    <input id="password" type="password" name="password" placeholder="Enter your password" required="" value=""/>
                  </span>
                  <span class="ec-login-wrap ec-login-fp">
                    <label><a href="#">Forgot Password?</a></label>
                  </span>
                  <span class="ec-login-wrap ec-login-btn">
                    <button class="btn btn-primary" type="submit">Login</button>
                    <a href="register.html" class="btn btn-secondary">Register</a>
                  </span>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include ("../components/footer")%> <%- include ("../components/link_js")%>
    <script>
      document.querySelector('.form-login').addEventListener('submit', (e) => {
        e.preventDefault();

        const email = $('#email').val();
        const password = $('#password').val();

        fetch('/api/v1/auth/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email, password }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.code == 200) window.location.href = '/profile';
            else {
              alert('Tài khoản hoặc mật khẩu sai');
            }
          })
          .catch((error) => {
            alert('Tài khoản hoặc mật khẩu sai');
          });
      });
    </script>
  </body>
</html>
