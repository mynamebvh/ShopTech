    <script>
      let inputQuantity = document.getElementById('qty-input');

      let btnAddToCart = document.querySelector('.add-to-cart');
      document.getElementById('dec').addEventListener('click', () => {
        if (inputQuantity.value > 1) {
          inputQuantity.value = parseInt(inputQuantity.value) - 1;
          btnAddToCart.setAttribute('data-quantity', inputQuantity.value);
        }
      });

      document.getElementById('inc').addEventListener('click', () => {
        inputQuantity.value = parseInt(inputQuantity.value) + 1;
        btnAddToCart.setAttribute('data-quantity', inputQuantity.value);
      });
    </script>

    <script>
      document.getElementById('form-comment').addEventListener('submit', (e) => {
        e.preventDefault();

        const product = document.getElementById('btn-comment').getAttribute('data-product');
        const content = document.getElementById('content').value;
        const name =  document.getElementById('btn-comment').getAttribute('data-name');
        const avatar =  document.getElementById('btn-comment').getAttribute('data-avatar');


        fetch('/api/v1/comments', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ product, content }),
        });

        document.getElementById('content').value = '';

        let element = `<div class="ec-t-review-item">
                    <div class="ec-t-review-avtar">
                        <img src="${avatar}" alt="" />
                    </div>
                    <div class="ec-t-review-content">
                        <div class="ec-t-review-top">
