                              <i class="ecicon eci-star fill"></i>
                              <i class="ecicon eci-star fill"></i>
                              <i class="ecicon eci-star fill"></i>
                              <i class="ecicon eci-star-o"></i>
                          </div>
                        </div>
                        <div class="ec-t-review-bottom">
                          <p>
                              ${content}
                          </p>
                        </div>
                    </div>
                  </div>`;
      
          document.querySelector(".ec-t-review-wrapper").insertAdjacentHTML('afterend',element)
                  
      });
    </script>
